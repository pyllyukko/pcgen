      # remove the chosen talent from the offered talents list
      # http://stackoverflow.com/questions/5701947/tcl-remove-an-element-from-a-list
      set idx [lsearch $talents_list [lindex $talents_list $j]]
      set talents_list [lreplace $talents_list $idx $idx]

      send_user "DEBUG: elements in \$talents_list = [llength $talents_list]\n"

      if {$j<24} {
        send_user "sending \"[lindex $alphabets [expr $j % 22]]\"\n"
        send "[lindex $alphabets [expr $j % 22]]"
      # TODO: count the page
      } elseif {$j>23&&$j<48} {
        #expect "\\\[?] Help"
        send "+"
        send_user "sending \"[lindex $alphabets [expr $j % 23]]\"\n"
        send "[lindex $alphabets [expr $j % 23]]"
      } elseif {$j>47} {
        #expect "\\\[?] Help"
        send "+"
        #expect "\\\[?] Help"
        send "+"
        send_user "sending \"[lindex $alphabets [expr $j % 23]]\"\n"
