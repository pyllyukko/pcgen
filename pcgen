  set game_screen $expect_out(buffer)

  if {$re_roll_until} {
    if {$total>$re_roll_until} {
      send_user "\n"
    } else {
      send_user "."
      kill_adom $pid
      continue
    }
  }
  if {[ask_user]} {break}
}
send_user "$game_screen"
log_user 1

interact
