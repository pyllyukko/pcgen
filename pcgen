      if {$done(0)} {
	send_user "forcing month: \033\[1;31m[string tolower $month_to_be_forced]\033\[0m"
        set done(0) 0
      }
      if {"$month"!="$month_to_be_forced"} {
        kill_adom $pid
      } else {break}
      send_user "."
